# ============================================
# LLEDO Industries - Admin Authentication
# Environment Variables Configuration
# ============================================

# DATABASE
DATABASE_URL="postgresql://user:password@localhost:5432/lledo_db"

# JWT SECRETS (generate with: openssl rand -hex 64)
JWT_SECRET="your-super-secret-jwt-key-minimum-64-characters-long-change-in-production"
ENCRYPTION_KEY="your-32-character-encryption-key"

# APPLICATION
NEXT_PUBLIC_APP_URL="https://lledo-industries.com"
NODE_ENV="production"

# EMAIL (choose one provider)
# --- Nodemailer / SMTP ---
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your-email@example.com"
SMTP_PASSWORD="your-email-password"
SMTP_FROM="noreply@lledo-industries.com"

# --- OR SendGrid ---
SENDGRID_API_KEY="SG.xxxxxxxxxxxx"

# --- OR Resend ---
RESEND_API_KEY="re_xxxxxxxxxxxx"

# RATE LIMITING (optional - uses Redis for distributed systems)
REDIS_URL="redis://localhost:6379"

# SECURITY
# Trusted proxies for IP detection (comma-separated)
TRUSTED_PROXIES="127.0.0.1,::1"

# IP Geolocation API (optional - ipapi.co is free)
# Leave empty to use default ipapi.co
GEO_API_URL=""
GEO_API_KEY=""

# SMS 2FA (optional - Twilio)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# CAPTCHA (optional - after 3 failed login attempts)
HCAPTCHA_SECRET_KEY="your-hcaptcha-secret-key"
NEXT_PUBLIC_HCAPTCHA_SITE_KEY="your-hcaptcha-site-key"

# OR Google reCAPTCHA v3
RECAPTCHA_SECRET_KEY="your-recaptcha-secret-key"
NEXT_PUBLIC_RECAPTCHA_SITE_KEY="your-recaptcha-site-key"
